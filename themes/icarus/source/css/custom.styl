.background-cover2 {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(255,255,255,0.7);
    z-index: 0;
}
.background-img {
    top: -1vh;
    left: -1vw;
    width: 102vw;
    height: 102vh;
    position: fixed;
    background-size: cover;
    background-image: url(/img/shimakaze.png);
    backdrop-filter: blur(5px);
    filter: blur(5px);
    z-index: 0;
}
.background-cover {
    top: -1vh;
    left: -1vw;
    width: 102vw;
    height: 102vh;
    position: fixed;
    background-size: cover;
    filter: none !important;
    backdrop-filter: none !important;
    background-image: url(/img/shimakaze.png);
    z-index: 0;
}
.show-two-lines {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.footer {
    background-color: #fafafa !important;
    background: #fafafa !important;
}
.widget {
    background-color: #ffffff99;
}
#toc {
    align-self: flex-start;
    position: -webkit-sticky;
    position: sticky;
    top: .75rem;
}

.links ul{color:rgba(255,255,255,.15);}
.links ul:after{content:" ";clear:both;display:block}
.links ul li{float:left;width:48%;position:relative;transition:.3s ease-out;border-radius:5px;line-height:1.3;height:90px;display:block;min-width: 15rem;}
.links ul li:hover{background:rgba(230,244,250,.5);cursor:pointer}
.links ul li a{padding:0 10px 0 90px}
.links ul li a img{width:60px;height:60px;object-fit:cover;border-radius:50%;position:absolute;top:15px;left:15px;cursor:pointer;margin:auto;border:none}
.links ul li a h4{color:#333;font-size:18px;margin:0 0 7px;padding-left:90px}
.links ul li a p{font-size:12px;color:#999;padding-left:90px}
.links ul li a h4,
.links ul li a p{cursor:pointer;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;line-height:1.4}
.links ul li a:hover h4{color:#51aded}
.links h3{margin:15px -25px;padding:0 25px;border-left:5px solid #51aded;background-color:#f7f7f7;font-size:25px;line-height:40px}